<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Define groups -->
    <record id="group_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Form view -->
    <record id="view_education_payment_form" model="ir.ui.view">
        <field name="name">education.payment.form</field>
        <field name="model">education.payment</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="description"/>
                        <field name="group_id" domain="[('student_ids', '=', student_id)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_education_payment_tree" model="ir.ui.view">
        <field name="name">education.payment.tree</field>
        <field name="model">education.payment</field>
        <field name="arch" type="xml">
            <tree string="Payment">
                <field name="student_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="description"/>
                <field name="group_id"/>
            </tree>
        </field>
    </record>

    <!-- Action for education.payment -->
    <record id="action_education_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">education.payment</field>
        <field name="view_mode">tree,form</field> <!-- Tree and Form views -->
    </record>

    <!-- Action for the chart view (graph) -->
    <record id="action_education_payment_chart" model="ir.actions.act_window">
        <field name="name">Payment Chart</field>
        <field name="res_model">education.payment</field>
        <field name="view_mode">graph</field>
        <field name="groups_id" eval="[(4, ref('group_admin'))]"/> <!-- Restrict to Admin group -->
    </record>

    <!-- Graph view for payments, grouped by group_id with colors -->
    <record id="view_education_payment_graph" model="ir.ui.view">
        <field name="name">education.payment.graph</field>
        <field name="model">education.payment</field>
        <field name="arch" type="xml">
            <graph string="Payments" type="bar">
                <field name="date" type="row"/> <!-- Grouping by date (x-axis) -->
                <field name="amount" type="measure"/> <!-- Measure is amount (y-axis) -->
                <field name="group_id" type="col" options="{'colors': {'1': 'blue', '2': 'green', '3': 'red'}}"/> <!-- Grouping by group_id, each group with a different color -->
            </graph>
        </field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_education_payment" name="Payments" parent="menu_academy_root" sequence="6">
        <menuitem
            id="menu_education_payIn"
            name="Payments"
            action="action_education_payment"
            sequence="1"/>
    </menuitem>

    <!-- Menu item for the chart view (only visible to Admin group) -->
    <menuitem
        id="menu_education_payment_chart"
        name="Payment Chart"
        parent="menu_education_payment"
        action="action_education_payment_chart"
        sequence="2"
        groups="group_admin"/> <!-- Visible only to Admin group -->

</odoo>
