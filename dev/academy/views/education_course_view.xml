<odoo>
    <record id="view_education_course_form" model="ir.ui.view">
        <field name="name">education.course.form</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="duration"/>
                        <field name="active_cource"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_education_course_tree" model="ir.ui.view">
        <field name="name">education.course.tree</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <tree string="Course">
                <field name="name"/>
                <field name="duration"/>
                <field name="active_cource"/>
            </tree>
        </field>
    </record>




    <record id="action_education_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">education.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_education_course" name="Courses" parent="menu_academy_root" action="action_education_course" sequence='5'/>
</odoo>